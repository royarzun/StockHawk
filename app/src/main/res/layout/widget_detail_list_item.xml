<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/widget_detail_list_item"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <GridLayout
        android:layoutDirection="locale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="1">

        <TextView
            android:id="@+id/widget_detail_list_item_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:layout_gravity="fill_horizontal|start"
            android:layout_column="0"
            android:layout_row="0"
            android:gravity="start"/>
        <TextView
            android:id="@+id/widget_detail_list_item_bid_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:layout_row="0"/>
        <TextView
            android:id="@+id/widget_detail_list_item_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:gravity="end"/>
    </GridLayout>
</FrameLayout>